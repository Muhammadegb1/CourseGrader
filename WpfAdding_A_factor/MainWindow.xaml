<Window x:Class="WpfAdding_A_factor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAdding_A_factor"
        mc:Ignorable="d"
        Title="Update Task Factor" Height="450" Width="800">
    <StackPanel>
        <ComboBox x:Name="taskComboBox" Margin="10"/>
        <TextBox x:Name="factorTextBox" Margin="10" />
        <Button Content="Update Factor" Margin="10" Click="UpdateFactorButton_Click"/>
    </StackPanel>
</Window>
